{
    "include": ["packages"],
    "exclude": ["**/node_modules", "**/dist", "test"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": ".",
        "paths": {
            "@pine/common": ["packages/common/src"],
            "@pine/common/*": ["packages/common/src/*"],
            "@pine/logger": ["packages/logger/src"],
            "@pine/logger/*": ["packages/logger/src/*"],
            "@pine/runner-api": ["packages/runner-api/src"],
            "@pine/runner-api/*": ["packages/runner-api/src/*"],
            "@pine/worker-api": ["packages/worker-api/src"],
            "@pine/worker-api/*": ["packages/worker-api/src/*"],
            "@pine/worker-srv": ["packages/worker-srv/src"],
            "@pine/worker-srv/*": ["packages/worker-srv/src/*"]
        },
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
